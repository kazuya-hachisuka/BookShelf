<h1>Books</h1>
<form action="<%= books_path %>" method="get" class="form-inline" >
  <input class="form-control" type"textname="s_title" value="<%= request[:s_title] %> ">
  <button class="btn btn-default" type="sbmit">検索</button>
</form>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td class="text-right">
          <%= link_to 'Review', new_book_review_path(book), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-link btn-xs' %>
          <%= link_to 'Delete', book_path(book), :class => 'btn btn-xs btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="float-left">
  <%= paginate @books %>
</div>
<%= link_to 'New Book', new_book_path, :class => 'btn btn-primary' %>
